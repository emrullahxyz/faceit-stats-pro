generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String           @id @default(cuid())
  faceitId      String?          @unique
  faceitNick    String?
  email         String?          @unique
  steamId       String?
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  favorites     FavoritePlayer[]
  searchHistory SearchHistory[]
}

model FavoritePlayer {
  id         String   @id @default(cuid())
  faceitId   String
  nickname   String
  avatarUrl  String?
  skillLevel Int?
  elo        Int?
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@unique([userId, faceitId])
  @@index([userId])
}

model SearchHistory {
  id        String   @id @default(cuid())
  query     String
  resultId  String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}
